{
    "extends": [
        "airbnb-base"
    ],
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": [
        "*.js"
    ],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "@typescript-eslint/indent": [
            "error",
            4
        ],
//        "@typescript-eslint/member-delimiter-style": [
//            "error",
//            {
//                "multiline": {
//                    "delimiter": "comma",
//                    "requireLast": false
//                }
//            }
//        ],
        "@typescript-eslint/no-shadow": "off",
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "indent": "off",
        "max-len": [
            "error",
            120
        ],
        "object-curly-newline": "off",
        "padded-blocks": "off",
        "spaced-comment": "off"
    }
}
